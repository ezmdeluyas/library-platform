<configuration>
    <springProperty scope="context" name="APP_NAME" source="spring.application.name" defaultValue="auth-service"/>

    <!-- DEV: readable -->
    <springProfile name="dev">
        <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
            <encoder>
                <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] %logger{36} - %msg%n</pattern>
            </encoder>
        </appender>

        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
        </root>
    </springProfile>

    <!-- PROD/UAT/DOCKER: structured-ish -->
    <springProfile name="prod,uat,docker">
        <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
            <encoder>
                <pattern>%d{yyyy-MM-dd'T'HH:mm:ss.SSSXXX} level=%-5level service=${APP_NAME} traceId=%X{traceId:-} spanId=%X{spanId:-} requestId=%X{requestId:-} logger=%logger{36} msg="%replace(%msg){'\"','\\\"'}"%n%ex</pattern>
            </encoder>
        </appender>

        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
        </root>
    </springProfile>
</configuration>